{
    "name": "jgss/laravel-pest-scenarios",
    "version": "1.0.2",
    "license": "MIT",
    "type": "library",
    "description": "Declarative, consistent and reusable test scenarios for Laravel + Pest",
    "authors": [{"name": "Julien Gassmann", "email": "juliengassmann974@gmail.com"}],
    "keywords": [
        "laravel",
        "pest",
        "testing",
        "test-scenarios",
        "feature-tests",
        "form-request",
        "api-testing",
        "unit-testing",
        "php",
        "scenarios"
    ],
    "require": {
        "php": "^8.3",
        "illuminate/support": "^11.0 || ^12.0"
    },
    "require-dev": {
        "brianium/paratest": "^7.8",
        "laravel/pint": "^1.13",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^9.0 || ^10.0",
        "pestphp/pest": "^3.0 || ^4.0",
        "pestphp/pest-plugin-laravel": "^3.0 || ^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-mockery": "^2.0",
        "rector/rector": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Jgss\\LaravelPestScenarios\\": "src/"
        },
        "files": [
            "src/Helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Jgss\\LaravelPestScenarios\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/"
        }
    },
    "scripts": {
        "refactor": "vendor/bin/rector process",
        "refactor:dry": "vendor/bin/rector process --dry-run",
        "lint": "pint --parallel",
        "test": "pest",
        "test:lint": "pint --parallel --test",
        "test:coverage": "pest --coverage --min=100",
        "test:parallel": "pest --parallel --processes=10",
        "test:coverage:parallel": "pest --coverage --min=100 --parallel --processes=10",
        "check:type": "phpstan analyse",
        "check": [
            "@refactor:dry",
            "@lint",
            "@check:type",
            "@test:coverage:parallel"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jgss\\LaravelPestScenarios\\Providers\\ServiceProvider"
            ]
        }
    },
    "config": {
        "audit": {
            "block-insecure": false
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/julien-gassmann/laravel-pest-scenarios/issues",
        "source": "https://github.com/julien-gassmann/laravel-pest-scenarios"
    }
}
